@model StudentApp.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>
<h4>Are you sure you want to delete this student?</h4>

<div>
    <h5>@Model.Name</h5>
    <p>Email: @Model.Email</p>
    <p>Phone: @Model.Phone</p>
    <p>Address: @Model.Address</p>
    <p>Gender: @Model.Gender</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a href="@Url.Action("Index", "Student")" class="btn btn-secondary mt-3">Cancel</a>
